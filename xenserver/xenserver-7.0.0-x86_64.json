{
    "builders": [
        {
            "boot_command": [
                "<wait>menu.c32",
                "<enter><wait><tab>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<wait>",
                "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
                "--- /install.img<enter>"
            ],
            "boot_wait": "5s",
            "guest_additions_mode": "disable",
            "headless": false,
            "disk_size": 51200,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "iso_url": "{{user `iso`}}",
            "shutdown_command": "/sbin/shutdown -hP now",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s",
            "type": "virtualbox-iso",
            "vm_name": "{{user `name`}}",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
            ],
            "virtualbox_version_file": ".vbox_version"
        },
        {
            "boot_command": [
                "<wait>menu.c32",
                "<enter><wait><tab>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<wait>",
                "answerfile=http://{{ .HTTPIP }}:{{ .HTTPPort }}/answerfile install ",
                "--- /install.img<enter>"
            ],
            "boot_wait": "5s",
            "headless": false,
            "disk_size": 51200,
            "guest_os_type": "RedHat_64",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "iso_url": "{{user `iso`}}",
            "shutdown_command": "/sbin/shutdown -hP now",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_wait_timeout": "10000s",
            "type": "vmware-iso",
            "vm_name": "{{user `name`}}",
            "vmx_data": {
                "cpuid.coresPerSocket": "1",
                "memsize": "{{ user `memory` }}",
                "numvcpus": "{{ user `cpus` }}"
              },
              "vmx_remove_ethernet_interfaces": true
            }
    ],
    "post-processors": [
        {
            "compression_level": 9,
            "output": "../builds/{{user `name`}}.{{.Provider}}.box",
            "type": "vagrant"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/vagrant.sh",
                "scripts/minimize.sh"
            ]
        }
    ],
    "variables": {
        "cpus": "2",
        "iso": "http://downloadns.citrix.com.edgesuite.net/11653/XenServer-7.0.0-install-cd.iso",
        "iso_checksum": "6e94639adaaf7fce3e44c40925ee011d",
        "memory": "2048",
        "name": "xenserver-7.0.0-x86_64"
    }
}
